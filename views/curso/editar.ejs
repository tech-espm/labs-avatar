<input type="hidden" id="id_curso" name="id_curso" value="<%=(item ? item.id_curso : 0) %>" />

<div class="row">
	<div class="col-sm-6">
		<div class="form-group">
			<label for="Descricao">Descrição</label>
			<input id="descricao" name="descricao" maxlength="5000" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.email : '') %>" <%=(item ? 'readonly="readonly"' : '') %> />
		</div>
	</div>

	<div class="col-sm-6">
		<div class="form-group">
			<label for="nome">Nome</label>
			<input id="nome" name="nome" maxlength="100" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome : '') %>" />
		</div>
	</div>
</div>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	$("#form").validate({
		rules: {
			nome: {
				required: true,
			},
			descricao: {
				required: true,
			},
		},
	
		submitHandler: function (form) {
			if (JsonWebApi.active)
				return;
	
			Swal.wait();
	
			//<% if (item) { %>
				JsonWebApi.postFormData("<%- root %>/api/curso/editar", form, function (response) {
					if (response.success)
						Swal.success("Curso alterado com sucesso! " + emoji.happy);
					else
						Swal.error(response.value + " " + emoji.sad);
				});
			//<% } else { %>
				JsonWebApi.postFormData("<%- root %>/api/curso/criar", form, function (response) {
					if (response.success) {
						resetForm("#form");
						Swal.success("Curso criado com sucesso! " + emoji.happy);
					} else {
						Swal.error(response.value + " " + emoji.sad);
					}
				});
			//<% } %>
		}
	});	
</script>
